            </div>
            <div class="col-md-3">
                <div class="header-img">
                    <div class="img-item">
                        <img src="~/Content/img/home_slide/slider_1.jpg" alt="Slider Image"  />
                        <a class="img-text" href="">
                            <p>Bộ sản phẩm son nhiều màu sắc</p>
                        </a>
                    </div>
                    <div class="img-item">
                        <img src="~/Content/img/home_slide/slider_6.jpeg" />
                        <a class="img-text" href="">
                            <p>Bộ sưu tập nước hoa của các thương hiệu nổi tiếng trên thế giới</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main Slider End -->
<!-- Brand Start -->
<div class="brand">
    <div class="container-fluid">
        <div class="brand-slider">
            @foreach (var brand in ViewBag.Brands)
            {
                <div class="brand-item">
                    <img src="@brand.brandLogo" alt="Brand Logo" height="75px"/>
                </div>
            }
        </div>
    </div>
</div>
<!-- Brand End -->
<!-- Feature Start-->
